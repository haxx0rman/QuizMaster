# QuizMaster Configuration File
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Keys - Add your API keys here
# =============================================================================
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
DEEPSEEK_API_KEY="your-deepseek-api-key-here"
GEMINI_API_KEY="your-gemini-api-key-here"

# =============================================================================
# LLM Configuration
# =============================================================================
# Primary API provider: OPENAI, CLAUDE, DEEPSEEK, GEMINI
API_PROVIDER="OPENAI"

# Model names for each provider
LLM_MODEL="gpt-4o-mini"
EMBEDDING_MODEL="text-embedding-3-small"

# For OLLAMA (local) usage:
# API_PROVIDER="OLLAMA"
# LLM_MODEL="llama3.2:latest"
# EMBEDDING_MODEL="bge-m3:latest"
# OPENAI_BASE_URL="http://localhost:11434/v1"

# =============================================================================
# BookWorm Configuration
# =============================================================================
BOOKWORM_WORKING_DIR="./bookworm_workspace"
PROCESSING_MAX_CONCURRENT="4"
PROCESSING_MAX_FILE_SIZE_MB="100"
PDF_PROCESSOR="pymupdf"  # Options: pymupdf, pdfplumber

# =============================================================================
# qBank Configuration
# =============================================================================
QBANK_DATA_DIR="./data/qbank"
QBANK_EXPORT_FORMAT="json"
DEFAULT_USER_ID="quizmaster_user"

# =============================================================================
# Pipeline Settings
# =============================================================================
CURIOUS_QUESTIONS_COUNT="5"
QUIZ_QUESTIONS_COUNT="10"
DISTRACTORS_COUNT="3"

# =============================================================================
# Directories and Logging
# =============================================================================
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="./logs/quizmaster.log"
OUTPUT_DIR="./output"
BACKUP_DIR="./backups"

# =============================================================================
# Performance Settings
# =============================================================================
MAX_TOKENS_PER_REQUEST="4000"
REQUEST_TIMEOUT="60"
RETRY_ATTEMPTS="3"
RATE_LIMIT_DELAY="1.0"